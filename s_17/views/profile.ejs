<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./stylesheets/style2.css">
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/profile/update">Profile Picture</a></li>
        </ul>
    </nav>
    <img src="./images/uploads/<%= user.profilePic%>" alt="Profile Picture">

    <h1>Hello <%= user.name %></h1>
    <h3>Write your post here</h3>
    <form action="/post" method="POST">
        <textarea id="content" name="content" placeholder="Content" required></textarea>
        <button type="submit">Post</button>
    </form>
    <div id="posts">
            <ul>
                <% user.posts.forEach(post => { %>
                    <li>
                        <h4>Username : <%= user.username %></h4>
                        <p><%= post.content %></p>
                        <small><%= post.date.toLocaleString() %></small>
                        <small><%=post.likes.length%> Like</small>
                        <a href="/like/<%= post._id %>"><button><%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %></button></a>
                        <a href="/edit/<%= post._id%>"><button>Edit</button></a>
                    </li>
                <% }) %>
            </ul>
    </div>
    
    
</body>
</html>